m4_define(CALL,{! macro expansion of call;

   cput = MPI_WTIME()
   T$1 = T$1 + ( cput-cpuo ) 

   call $2$3

  !cpuo = zero
   cpuo = MPI_WTIME()

  ! macro expansion of call; end;})m4_dnl ; can put comments here;
m4_define(WCALL,{! macro expansion of wcall;

   cput = MPI_WTIME()
   T$1 = T$1 + ( cput-cpuo ) 

#ifdef DEBUG
   if( W$1 ) then
    cput = MPI_WTIME()
    write(ounit,'("$1 : ",f10.2," : myid=",i3," ; calling $2 ;")') cput-cpus, myid
   endif
#endif

   call $2$3

#ifdef DEBUG
   if( W$1 ) then
    cput = MPI_WTIME()
    write(ounit,'("$1 : ",f10.2," : myid=",i3," ; called  $2 ;")') cput-cpus, myid
   endif
#endif

  !cpuo = zero
   cpuo = MPI_WTIME()

  ! macro expansion of wcall; end;})m4_dnl ; can put comments here;
m4_define(HDEFGRP,{! macro expansion of hdefgrp;

  ! temporarily disable error printing to not confuse users
  call h5eset_auto_f(0, hdfier)
  if( hdfier.ne.0 ) then
    write(0,'("sphdf5 : "10x" : error calling h5eset_auto_f ;")')
    call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
    stop "sphdf5 : error calling h5eset_auto_f ;"
  endif

  ! check if group exists
  call h5lget_info_f($1, "$2", dummy_cset, dummy_corder, dummy_f_corder_valid, dummy_link_type, &
  &                            dummy_address, dummy_val_size, hdfier)
  if (hdfier.lt.0) then
   grp_exists = .false.
   if (hdfDebug .and. myid.eq.0) then ; write(*,*) "group $2 does not exist yet, creating it"
   endif
  else
   grp_exists = .true.
   if (hdfDebug .and. myid.eq.0) then ; write(*,*) "group $2 exists already, opening it"
   endif
  endif
  
  ! re-enable error printing to be sensitive to "real" errors
  call h5eset_auto_f(1, hdfier)
  if( hdfier.ne.0 ) then
    write(0,'("sphdf5 : "10x" : error calling h5eset_auto_f ;")')
    call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
    stop "sphdf5 : error calling h5eset_auto_f ;"
  endif
  
  if (.not.grp_exists) then
   ! if group does not exist, create it
   call h5gcreate_f($1, "$2", $3, hdfier)
   if( hdfier.ne.0 ) then
    write(0,'("sphdf5 : "10x" : error calling h5gcreate_f ;")')
    call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
    stop "sphdf5 : error calling h5gcreate_f ;"
   endif
  else
   ! if the group already exists, open it
   call h5gopen_f($1, "$2", $3, hdfier)
   if( hdfier.ne.0 ) then
    write(0,'("sphdf5 : "10x" : error calling h5gopen_f ;")')
    call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
    stop "sphdf5 : error calling h5gopen_f ;"
   endif
  endif

  ! macro expansion of hdefgrp; end;})m4_dnl ; can put comments here;
m4_define(HCLOSEGRP,{! macro expansion of hclosegrp;

  call h5gclose_f($1, hdfier)
  if( hdfier.ne.0 ) then
    write(0,'("sphdf5 : "10x" : error calling h5gclose_f ;")')
    call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
    stop "sphdf5 : error calling h5gclose_f ;"
  endif

  ! macro expansion of hclosegrp; end;})m4_dnl ; can put comments here;
m4_define(HWRITELV,{! macro expansion of hwritelv;
! arguments: group, length, name, data
#ifdef DEBUG
  if( Wmacros ) write(ounit,'("macros : ", 10x ," : myid=",i3," ; writing $3 ;")') myid
#endif

  rank = 1 ; onedims(1) = $2

  if( $2.le.0 ) then

   write(0,'("sphdf5 : "10x" : error calling hwriteiv ; $3 : $2.le.0 ;")')

  else

   call h5screate_simple_f( rank, onedims, space_id, hdfier )
   if( hdfier.ne.0 ) then
    write(0,'("sphdf5 : "10x" : error calling h5screate_simple_f ;")')
    call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
    stop "sphdf5 : error calling h5screate_simple_f ;"
   endif

   ! temporarily disable error printing to not confuse users
   call h5eset_auto_f(0, hdfier)
   if( hdfier.ne.0 ) then
     write(0,'("sphdf5 : "10x" : error calling h5eset_auto_f ;")')
     call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
     stop "sphdf5 : error calling h5eset_auto_f ;"
   endif
   
   ! check if dataset can be opened
   call h5dopen_f($1, "$3", dset_id, hdfier)
   if (hdfier.lt.0) then
    var_exists = .false.
    if (hdfDebug .and. myid.eq.0) then ; write(*,*) "dataset $3 does not exist yet, creating it"
    endif
   else
    var_exists = .true.
    if (hdfDebug .and. myid.eq.0) then ; write(*,*) "dataset $3 exists already, opening it"
    endif
   endif
   
   ! re-enable error printing to be sensitive to "real" errors
   call h5eset_auto_f(1, hdfier)
   if( hdfier.ne.0 ) then
     write(0,'("sphdf5 : "10x" : error calling h5eset_auto_f ;")')
     call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
     stop "sphdf5 : error calling h5eset_auto_f ;"
   endif
   
   ! if the dataset does not exist already, create it. Otherwise, it should be open already
   if (.not.var_exists) then
    call h5dcreate_f( $1, "$3", H5T_NATIVE_INTEGER, space_id, dset_id, hdfier )
    if( hdfier.ne.0 ) then
     write(0,'("sphdf5 : "10x" : error calling h5dcreate_f ;")')
     call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
     stop "sphdf5 : error calling h5dcreate_f ;"
    endif
   endif

   call h5dwrite_f( dset_id, H5T_NATIVE_INTEGER, merge(1,0,$4) , onedims, hdfier )
   if( hdfier.ne.0 ) then
    write(0,'("sphdf5 : "10x" : error calling h5dwrite_f ;")')
    call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
    stop "sphdf5 : error calling h5dwrite_f ;"
   endif

   call h5dclose_f(dset_id, hdfier)    ! terminate dataset;
   if( hdfier.ne.0 ) then
    write(0,'("sphdf5 : "10x" : error calling h5dclose_f ;")')
    call MPI_ABORT( MPI_COMM_WORLD, 1, ierr )
    stop "sphdf5 : error calling h5dclose_f ;"
   endif

  endif

  ! macro expansion of hwritelv; end;})m4_dnl ; can put comments here;
